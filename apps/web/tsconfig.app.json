{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // Why is this needed? We have a pnpm workspace dependency on it
      "foo-lib": ["../../packages/foo-lib/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "../../packages/foo-lib/tsconfig.app.json"
    }
  ]
}
